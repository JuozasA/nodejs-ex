#!/bin/bash

if [ "$(ls ${HOME}/node_modules 2>/dev/null)" ]; then
  tar -C ${HOME} -cf - node_modules
fi
sh-4.2$ ls
assemble  env  generate-container-user	run  save-artifacts  usage
sh-4.2$ cat usage
#!/bin/sh

cat <<EOF
This is a S2I base image for Nodejs:
To use it, install S2I: https://github.com/openshift/source-to-image

Sample invocation:
s2i build https://github.com/nodeshift/centos7-s2i-nodejs --context-dir=test/test-app/ rhoar-nodejs/nodejs-10:latest sample-app

You can then run the resulting image via:
docker run -p 8080:8080 sample-app
EOF
